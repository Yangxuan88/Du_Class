
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Du_Class.Models;
@model List<Student>



@{

    int code = 1;
}
<ul class="breadcrumb">
    <li><a href="#">成绩管理</a></li>
    <li class="active">查看学生成绩</li>
</ul>

<div class="inputDiv">
    <form action="/Student/Index" method="post">
        <label for="Name">
            姓名:
        </label>
        <input type="text" name="Name" id="userName" value="@ViewBag.Name" class="form-control" placeholder="请入姓名模糊查询" />
        <input type="submit" value="查询" class="btn btn-success" />
    </form>
</div>
<table class="table table-hover table-bordered" data-spy="scroll" data-target=".navbar" data-offset="50">
    <thead>
        <tr class="active">
            <td>编号</td>
            <td>学号</td>
            <td>姓名</td>

            <td>班级</td>
            <td>科目</td>
            <td>成绩</td>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="warning">
                <td>@(code++)</td>
                <td>@item.Stu_Namber</td>
                <td>@item.Stu_Name</td>
                <td>@item.Class.ClassName</td>
                @foreach (var item1 in item.Grade)
                {
                    <td>@item1.Course.CourseName</td>
                    <td>@item1.Stu_Score</td>

                }

                @*<td>@item.Stu_Sex</td>
                    <td>@item.IDCard</td>
                    <td>@item.Nation</td>
                    <td>@item.NativePlace</td>
                    <td>@item.PoliticsStatus</td>

                    <td>@item.Phone</td>
                    <td>@item.EnrollmentYear</td>

                    <td>@item.SchoolRoll</td>
                    @if (item.SchoolRoll == "1")
                    {
                        <td>正常</td>
                    }
                    else if (item.SchoolRoll == "0")
                    {
                        <td>退学</td>
                    }
                    else
                    {
                        <td>休学</td>
                    }
                    <td>@item.Class.ClassName</td>*@

            </tr>
        }
    </tbody>

</table>
