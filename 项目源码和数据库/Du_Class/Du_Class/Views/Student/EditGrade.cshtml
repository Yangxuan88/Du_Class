
@{
    ViewBag.Title = "EditGrade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Du_Class.Models;

    <ul class="breadcrumb">
        <li><a href="#">成绩管理</a></li>
        <li class="active">修改学生成绩</li>
    </ul>
@{
    Student stu = ViewBag.stu;
    List<Grade> grade = ViewBag.grade;
}
<style type="text/css">
    #content{
        width:800px;
        height:400px;
   border: 3px solid gainsboro;
        margin-top:30px;
    }
    input,label{
      margin-top:10px;
      margin-left:10px;
    }
    .left{
        height:40px;
        background-color:steelblue;
        color:white;
        font-size:large;
    }

</style>
<div id="content">
    <div class="left">修改成绩</div>

    <input type="hidden" value="@stu.StudentID" id="studentID" name="studentID" />
    <div class="form-group col-lg-12 form-inline">
        <label for="Stu_Name">姓名:</label>
        <input type="text" value="@stu.Stu_Name" name="Stu_Name" placeholder="请输入姓名" class="form-control" readonly="readonly" />
    </div>

    <div class="form-group col-lg-12 form-inline">
        <label for="Stu_Namber">学号:</label>
        @*<input type="radio" value="true" name="Sex" checked />男
            <input type="radio" value="false" name="Sex" />女*@
        <input type="text" value="@stu.Stu_Namber" name="Stu_Namber" placeholder="请输入学号" class="form-control" readonly="readonly" />
    </div>

    <div class="form-group col-lg-12 form-inline">
        <label for="Stu_Sex">性别:</label>
        <input type="text" value="@stu.Stu_Sex" name="Stu_Sex" placeholder="请输入性别" class="form-control" readonly="readonly" />
    </div>

    <form class="form-horizontal" method="post" enctype="multipart/form-data" action="/Student/EditGrade" id="form1">
        <div class="form-group col-lg-12 form-inline">
            @foreach (var item in stu.Grade)
            {
                <input type="hidden" value="@item.Course.CourseID" id="CourseID" name="CourseID" />
                <input type="hidden" value="@stu.StudentID" id="studentID" name="studentID" />
                <input type="hidden" value="@item.GradeID" id="GradeID" name="GradeID" />
                <div class="form-group col-lg-12 form-inline">
                    <label for="Stu_Score">
                        @item.Course.CourseName:
                    </label>
                    <input type="text" value="@item.Stu_Score" name="Stu_Score" placeholder="" class="form-control" />
                </div>
            }
        </div>
        <div class="form-group col-lg-12">
            <a href="javascript:history.go(-1)" class="btn btn-link">返回</a>
            <input type="submit" class="btn btn-danger" value="保存" />
        </div>
    </form>
</div>