
@{
    ViewBag.Title = "Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Du_Class.Models

<style type="text/css">
    #content {
        width: 800px;
        height: 570px;
        border: 3px solid gainsboro;
        margin-top: 30px;
    }

    input, label {
        margin-top: 10px;
        margin-left: 10px;
    }

    .left {
        height: 40px;
        background-color: steelblue;
        color: white;
        font-size: large;
    }
</style>

<ul class="breadcrumb">
    <li><a href="#">课程管理</a></li>
    <li class="active">添加课程</li>
</ul>

<div id="content">
    <div class="left">添加课程</div>
    <form class="form-horizontal" method="post" enctype="multipart/form-data" action="/Teacher/AddCourse" id="form1">
        <div class="col-lg-12 ">
            <label for="Class_ID">班级:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
            <select class="form-control" name="Class_ID">
                @foreach (var item in ViewBag.CAL as List<Class>)
                {
                    <option name="Class_ID" value="@item.Class_ID">@item.ClassName</option>
                }
            </select>
        </div>
        <div class="col-lg-12 ">
            <label name="CourseName">科目：&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
            <input type="text" name="CourseName" placeholder="请输入课程名称" class="form-control" />
        </div>
        <div class="col-lg-12 ">
            <label name="Tea_Name">授课老师：</label>
            <input type="text" name="Tea_Name" placeholder="请输入授课老师" class="form-control" />
        </div>
        <div class="col-lg-12 ">
            <label name="ClassRoom">上课地点：</label>
            <input type="text" name="ClassRoom" placeholder="请输入上课地点" class="form-control" />
        </div>

        <div class="col-lg-12 ">
            <label name="SchoolTime">上课日期：</label>
            <input type="date" name="SchoolTime" placeholder="请输入上课日期" class="form-control" />
        </div>

        <div class="col-lg-12 ">
            <label name="NewTime">上课时间：</label>
            <input type="datetime" name="NewTime" placeholder="请输入上课时间" class="form-control" />
        </div>
        <div class="col-lg-12 ">
            <input type="submit" value="提交" class="btn btn-success" />
        </div>
    </form>
</div>
