        }
    });
</script>

<script type="text/javascript">
    function checkSubmitMobil() {
        var pattern = /^1[34578]\d{9}$/;
        if (!$("#tel").val().match(/^1[34578]\d{9}$/)) {
            alert("手机号码格式不正确！");
