            Stu_Sex: { required: "性别是必填项！" },
            IDCard: { required: "身份证是必填项！" },
            Nation: { required: "民族是必填项！" },
            NativePlace: { required: "籍贯是必填项！" },
            PoliticsStatus: { required: "政治面貌是必填项！" },
