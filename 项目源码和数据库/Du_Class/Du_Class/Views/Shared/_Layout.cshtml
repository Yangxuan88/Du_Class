    <div class="pageContent">
        <div id="left">
            <!-- 左侧导航栏 -->    
            <div class="panel-group" id="accordion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion"
                               href="#collapseOne" style="text-decoration:none">
                                <span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;班级管理
                            </a>
                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <a href="~/Teacher/StuInfo" style="text-decoration:none">
                                <span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;学生查询
                            </a>

                        </div>
                    </div>
                </div>
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion"
                               href="#collapseTwo" style="text-decoration:none">
                                <span class="glyphicon glyphicon-stats"></span>&nbsp;课程管理
                            </a>
                        </h4>
                    </div>
                    <div id="collapseTwo" class="panel-collapse collapse">
                        <div class="panel-body">
                            <a href="" style="text-decoration:none">
                                <span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;发布课程
                            </a>
                        </div>
                    </div>
                </div>
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion"
                               href="#collapseThree" style="text-decoration:none">
                                <span class="glyphicon glyphicon-user"></span>&nbsp; 学生成绩
                            </a>
                        </h4>
                    </div>
                    <div id="collapseThree" class="panel-collapse collapse">
                        <div class="panel-body">
                            <a href="" style="text-decoration:none">
                                <span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;添加学生成绩
                            </a>
                        </div>  
                        <div class="panel-body">
                            <a href="" style="text-decoration:none">
                                <span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;查看学生成绩
                            </a>
                        </div>
                    </div>
                </div>
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion"
                               href="#collapseFour" style="text-decoration:none">
                                <span class="glyphicon glyphicon-comment"></span>&nbsp;&nbsp;公告管理
                            </a>
